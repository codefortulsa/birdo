echo "-----> Running Birdo post-compile hook"

# trying the libs here
export GEOS_LIBRARY_PATH='/app/.geodjango/geos/lib/libgeos_c.so'
export GDAL_LIBRARY_PATH='/app/.geodjango/gdal/lib/libgdal.so'
export PROJ4_LIBRARY_PATH='/app/.geodjango/proj4/lib/libproj.so'

# Sync and migrate
echo "-----> Running migrations"
python manage.py migrate --noinput

echo "-----> Running collect static"
python manage.py collectstatic --noinput

echo "-----> Birdo Post-compile done"
