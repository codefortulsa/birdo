balls()
  background-color: $primary-color
  width: $ball-size
  height: $ball-size
  border-radius: 100%
  margin: $margin

delay($interval, $count, $index)
  $index * $interval - $interval * $count

$size = 25px

@keyframes rotate_pacman_half_up
  0%
    transform: rotate(270deg)
  50%
    transform: rotate(360deg)
  100%
    transform: rotate(270deg)

@keyframes rotate_pacman_half_down
  0%
    transform: rotate(90deg)
  50%
    transform: rotate(0deg)
  100%
    transform: rotate(90deg)

pacman_design()
  width: 0px
  height: 0px
  border-right: $size solid transparent
  border-top: $size solid $primary-color
  border-left: $size solid $primary-color
  border-bottom: $size solid $primary-color
  border-radius: $size

@keyframes pacman_balls
  75%
    opacity: 0.7
  100%
    transform: translate(-4 * $size, -($size) / 4)

ball-placement($n = 3, $start = 0)
  for $i in ($start)..($n)
    > div:nth-child({$i + 2})
      animation: pacman_balls 1s delay(0.33s, $n, $i) infinite linear

.pacman
  ball-placement()
  position: relative
  > div:first-of-type
    pacman_design()
    animation: rotate_pacman_half_up 0.5s 0s infinite
    position: relative
    left: -30px
  > div:nth-child(2)
    pacman_design()
    animation: rotate_pacman_half_down 0.5s 0s infinite
    margin-top: (-2 * $size)
    position: relative
    left: -30px
  > div:nth-child(3),
  > div:nth-child(4),
  > div:nth-child(5),
  > div:nth-child(6)
    balls()
    width: 10px
    height: 10px
    position: absolute
    transform: translate(0, -($size) / 4)
    top: 25px
    left: 70px
